					+project(project.image, project.title, project.about, project.date, project.link, project.tags)
		+e.button-wrapper
			+b.A.vbtn._large._secondary._secondary-shadow.effect._bounce-top(href="#") See more projects
	+b.SECTION.invite
		.vcontainer
			.text-center.offset-static-sm
				+e.H3.title.vtitle-general.underline._center._bg-secondary Are you interested in working with us?
				+e.P.title-description.vtitle-general-small Contact us for more details
			.text-center
				+b.BUTTON.vbtn._large._primary._primary-shadow.effect._bounce-top(data-action="vmodal" data-open="#form") Contact us
block footer
	+connect-script("js/lib/anime.min.js")
	+connect-script("js/lib/demo3.js")
block dev
	+b.vmodal#form
		+e.box._default
			+e.header
				+e.P.title Contact Us
				+e.BUTTON.close(data-close="vmodal") &times;
			+e.body
				+b.FORM.vform._block(action="mail.php" method="POST")
					+e.content
						+e.row._line
							+b.INPUT.vform-control(type="text" placeholder="Fullname" name="name")
							+e.SPAN.line
						+e.row._line
							+b.INPUT.vform-control(type="text" placeholder="E-mail" name="email")
							+e.SPAN.line
						+e.row._line
							+b.INPUT.vform-control(type="text" placeholder="Phone" name="phone")
							+e.SPAN.line
						+e.row._btn
							+b.BUTTON.vbtn._block._large._primary.effect._bounce-top(type="submit") Send