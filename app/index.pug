	+b.SECTION.our-skills
		+e.content
			h3.our-skills__title.vtitle.vtitle_animation.vtitle_flex.vtitle_flex-around.js-split Skills
			+e.container.vcontainer
				+e.P.subtitle.underline._left._bg-secondary Code
				+e.row.vrow
					for skill in sevaSkills
						+skill(skill.name, skill.fullname, skill.description, skill.percentage, skill.technology)
			+e.container.vcontainer
				+e.P.subtitle.underline._left._bg-secondary Design
				+e.row.vrow
					for skill in alinaSkills
						+skill(skill.name, skill.fullname, skill.description, skill.percentage, skill.technology)
	+b.SECTION.portfolio
		h3.portfolio__title.vtitle.vtitle_animation.vtitle_flex.vtitle_flex-around.js-split.color-secondary Works
		+e.container.vcontainer
			+e.description
				+e.P.description-title TOP-10
				+e.description-content
					+e.description-content-title.underline._left._bg-secondary Best works
